# Lyria (Google Vertex AI) API配置
# 获取API密钥: https://console.cloud.google.com/

# Google Cloud项目配置
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Lyria API配置（备用选项）
# 如果使用直接API调用，配置以下选项
LYRIA_API_KEY=your_lyria_api_key_here

# API请求超时设置（毫秒）
API_TIMEOUT=60000

# 默认音乐生成时长（秒）
DEFAULT_DURATION=30

# 最大音乐生成时长（秒）
MAX_DURATION=300

# 降级选项：如果未配置Lyria API，使用演示模式
ENABLE_DEMO_MODE=true
